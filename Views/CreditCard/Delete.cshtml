@model FoodDelivery.Models.CreditCard
@{
    ViewData["Title"] = "Delete Card";
}

<h2>Delete Card</h2>

<h3>Are you sure you want to delete this card?</h3>
<div>
    @if (!string.IsNullOrEmpty(Model.CardNumber) && Model.CardNumber.Length >= 4)
    {
        <h4>Card Number: **** **** **** @Model.CardNumber.Substring(Model.CardNumber.Length - 4)</h4>
    }
    else
    {
        <h4>Card Number: Invalid Card Number</h4>
    }
    <h4>Card Holder: @Model.CardHolderName</h4>
    <h4>Expiry: @Model.ExpiryMonth/@Model.ExpiryYear</h4>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "CreditCard")" class="btn btn-secondary">Cancel</a>
</form>
