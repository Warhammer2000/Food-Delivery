@model Delivery

<h2>Delivery Details</h2>

<div>
    <h4>Delivery</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            Courier ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourierId)
        </dd>
        <dt class="col-sm-2">
            Delivery Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
